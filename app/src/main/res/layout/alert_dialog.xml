<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/mobile_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="8pt"
        android:text="Please enter your mobile number"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/input_mobile_number"
        android:layout_below="@+id/mobile_number_text"
        android:textColor="@color/black"
        android:textSize="10pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:imeOptions="actionDone"
        android:hint="Mobile number"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_below="@+id/input_mobile_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:text="Please provide us your mobile number to send you an SMS remainder daily."/>

</RelativeLayout>